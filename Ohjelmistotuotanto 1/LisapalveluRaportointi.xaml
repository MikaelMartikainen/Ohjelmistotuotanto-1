<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ohjelmistotuotanto_1.LisapalveluRaportointi"
             Title="Lis채palvelujen Raportointi"
             BackgroundColor="#2E2E2E">

    <StackLayout Padding="10" Spacing="20">

        <Label Text="Lis채palvelujen Raportointi"
               FontSize="24"
               TextColor="White"
               HorizontalOptions="Center" />

        <!-- Aikajakson valinta -->
        <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Center">
            <Label Text="Valitse aikajakso:"
                   FontSize="18"
                   TextColor="White"
                   VerticalOptions="Center" />
            <DatePicker x:Name="AloitusPvm" />
            <Label Text="-" TextColor="White" VerticalOptions="Center"/>
            <DatePicker x:Name="LopetusPvm" />
        </StackLayout>

        <!-- Alueen valinta Picker -->
        <Label Text="Valitse alue:" TextColor="White" />
        <Picker x:Name="AluePicker"
                Title="Valitse alue"
                TextColor="Black"
                BackgroundColor="White">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Helsinki</x:String>
                    <x:String>Turku</x:String>
                    <x:String>Tampere</x:String>
                    <x:String>Oulu</x:String>
                    <x:String>Rovaniemi</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <!-- Lataa Raportti -painike -->
        <Button Text="Lataa Raportti"
                Clicked="LuoRaporttiButton_Clicked"
                BackgroundColor="DarkGray"
                TextColor="White"
                BorderColor="Black"
                BorderWidth="2"
                CornerRadius="10"
                HorizontalOptions="Center"
                WidthRequest="150" />

        <!-- Raporttin채kym채 -->
        <Border Stroke="Gray"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 8"
                Padding="5"
                Margin="0,10,0,0">
            <CollectionView x:Name="RaporttiCollectionView"
                            HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" Padding="10" Margin="5" CornerRadius="5">
                            <Label Text="{Binding}" TextColor="White" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>

    </StackLayout>
</ContentPage>
