<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ohjelmistotuotanto_1.MainPage"
             BackgroundColor="Black"
             Title="Etusivu">

    <ScrollView>
        <Grid Padding="20" RowSpacing="15" ColumnSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0"
                    Text="Alueiden hallinta"
                    BackgroundColor="#333"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="14"
                    HeightRequest="80"
                    Clicked="OnAlueidenHallintaClicked"/>

            <Button Grid.Row="0" Grid.Column="1"
                    Text="Palveluiden hallinta"
                    BackgroundColor="#333"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="14"
                    HeightRequest="80"
                    Clicked="OnPalveluidenHallintaClicked"/>

            <Button Grid.Row="1" Grid.Column="0"
                    Text="Mökkien hallinta"
                    BackgroundColor="#333"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="14"
                    HeightRequest="80"
                    Clicked="OnMokkivarauksetClicked"/>

            <Button Grid.Row="1" Grid.Column="1"
                    Text="Asiakashallintajärjestelmä"
                    BackgroundColor="#333"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="14"
                    HeightRequest="80"
                    Clicked="OnAsiakashallintaClicked"/>

            <Button Grid.Row="2" Grid.Column="0"
                    Text="Laskujen hallinta ja seuranta"
                    BackgroundColor="#333"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="14"
                    HeightRequest="80"
                    Clicked="OnLaskujenHallintaClicked"/>

            <Button Grid.Row="2" Grid.Column="1"
                    Text="Majoittumisten raportointi aikajaksolla valituilla alueilla"
                    BackgroundColor="#333"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="13"
                    HeightRequest="80"
                    Clicked="OnMajoittumistenRaportointiClicked"/>

            <Button Grid.Row="3" Grid.Column="0"
                    Text="Majoittumisten raportointi"
                    BackgroundColor="#333"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="14"
                    HeightRequest="80"
                    Clicked="OnMajoittumistenRaportointiClicked"/>

            <Button Grid.Row="3" Grid.Column="1"
                    Text="Ostettujen palvelujen raportointi aikajaksolla valituilla alueilla"
                    BackgroundColor="#333"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="13"
                    HeightRequest="80"
                    Clicked="OnOstetutPalvelutClicked"/>
        </Grid>
    </ScrollView>
</ContentPage>
